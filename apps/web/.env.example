# Convex Configuration
# Copy these values from packages/backend/.env.local after running `bunx convex dev`

# Your Convex deployment name
CONVEX_DEPLOYMENT=dev:your-deployment-name

# Convex API URL for backend operations
CONVEX_URL=https://your-deployment-name.convex.cloud

# Public Convex URL for client-side operations
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud

# Convex site URL for HTTP actions (auth callbacks, webhooks)
NEXT_PUBLIC_CONVEX_SITE_URL=https://your-deployment-name.convex.site

# Your app's URL (used for auth redirects)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
